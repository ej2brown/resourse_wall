<body>
  <%- include('partials/_header') %>
  <main class="container margin-top">
    <div class="new-resource-container">
      <form action='/resources/addResource' method='POST'>
        <h1>Upload A Resource</h1>
        <div class="form-group">
          <label for="formGroupExampleInput">Title</label>
          <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Add a title" name='title' required>
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Description</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Add a description"
            name='description' required>
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Category</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Add a category" name='category' required>
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput">URL</label>
          <input value='http://' type="text" class="form-control" id="formGroupExampleInput3" placeholder="Add URL" name='url' required>
        </div>
        <div class="form-group">
          <button type='submit' class="btn btn-secondary">Submit</button>
        </div>
      </form>
      </div>
  </main>

