  <%- include('partials/_header') %>

  <main class="container margin-top">
    <h1>Upload A New Resource</h1>
    <form action='/addResource' method='POST'>
      <div class="form-group">
        <label for="formGroupExampleInput">URL</label>
        <input type="text" class="form-control" id="formGroupExampleInput3" placeholder="Add a URL" name='url'>
