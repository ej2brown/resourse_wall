      <div class="form-group">
        <label for="formGroupExampleInput">Title</label>
        <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Add a title" name='title'>
      </div>
      <div class="form-group">
        <label for="formGroupExampleInput2">Description</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Add a description"
          name='description'>
      </div>
      <div class="form-group">
        <button type='submit'>Submit</button>
      </div>
    </form>
  </main>

